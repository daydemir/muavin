{
  "gateway": {
    "port": 18789,
    "mode": "local",
    "bind": "lan"
  },
  "agents": {
    "defaults": {
      "maxConcurrent": 4,
      "subagents": {
        "maxConcurrent": 8
      }
    },
    "list": [
      {
        "id": "conductor",
        "default": true,
        "name": "Conductor",
        "model": "anthropic/claude-opus-4-6",
        "tools": {
          "allow": ["group:sessions", "group:memory", "group:web", "group:automation", "group:messaging", "read"],
          "deny": ["group:runtime", "group:nodes", "group:ui", "write", "edit", "apply_patch"]
        },
        "subagents": {
          "allowAgents": ["reader", "researcher", "social", "tortoise", "coder"]
        }
      },
      {
        "id": "reader",
        "name": "Reader",
        "model": "anthropic/claude-opus-4-6",
        "workspace": "~/.openclaw/workspace-reader",
        "tools": {
          "profile": "minimal",
          "allow": ["read", "group:memory"]
        }
      },
      {
        "id": "researcher",
        "name": "Researcher",
        "model": "google/gemini-2.5-pro",
        "workspace": "~/.openclaw/workspace-researcher",
        "tools": {
          "profile": "minimal",
          "allow": ["group:web", "read", "group:memory"]
        }
      },
      {
        "id": "social",
        "name": "Social",
        "model": "xai/grok-3",
        "workspace": "~/.openclaw/workspace-social",
        "tools": {
          "profile": "minimal",
          "allow": ["group:web", "read", "group:memory"]
        }
      },
      {
        "id": "tortoise",
        "name": "Tortoise",
        "model": "ollama/glm-4.7-flash-128k",
        "workspace": "~/.openclaw/workspace-tortoise",
        "heartbeat": {
          "every": "30m"
        },
        "tools": {
          "allow": ["group:fs", "group:runtime", "group:memory", "group:nodes", "group:automation"],
          "deny": ["group:web", "group:sessions", "group:messaging", "group:ui"]
        }
      },
      {
        "id": "coder",
        "name": "Coder",
        "model": "openai-codex/gpt-5.3-codex",
        "workspace": "~/.openclaw/workspace-coder",
        "tools": {
          "allow": ["group:runtime", "group:fs", "group:memory"],
          "deny": ["group:web", "group:sessions", "group:messaging", "group:nodes", "group:ui", "group:automation"]
        }
      }
    ]
  },
  "messages": {
    "ackReactionScope": "group-mentions"
  }
}
